<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="303dp"
        android:layout_height="126dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_push_time"
            android:layout_width="101dp"
            android:layout_height="20dp"
            android:layout_marginLeft="125dp"
            android:gravity="center"
            android:text="星期二 下午 5:20"
            android:textColor="#A3A0AC"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_push_portrait"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/ic_push_portrait"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_push_certification"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_push_certification"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_push_title_focus"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="36dp"
            android:text="你关注的 "
            android:textColor="#333440"
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_push_title_id"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="36dp"
            android:textColor="#4C97F0"
            android:textSize="15dp"
            android:maxEms="7"
            android:ellipsize="end"
            app:layout_constraintLeft_toRightOf="@id/tv_push_title_focus"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_push_title_new"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="36dp"
            android:text=" 发新动态了"
            android:textColor="#333440"
            android:textSize="15dp"
            app:layout_constraintLeft_toRightOf="@id/tv_push_title_id"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_push_content_background"
            android:layout_width="255dp"
            android:layout_height="60dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:background="@drawable/ic_push_item_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_push_content"
            android:layout_width="255dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:text="赢取奖励快来，还是要提醒大家提醒还是要提醒大家提醒还是要提提醒大家提醒还是要提提醒大家提醒还是要提"
            android:maxLines="2"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:textColor="#63636D"
            android:ellipsize="end"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>